<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.wxx.shop</groupId>
	<artifactId>shop</artifactId>
	<packaging>pom</packaging>
	<version>1.0.0</version>
	<name>shop</name>

	<properties>
		<spring.version>4.2.9.RELEASE</spring.version>
		<mybatis.version>3.3.1</mybatis.version>
		<redis.version>2.8.2</redis.version>
		<slf4j.version>1.6.6</slf4j.version>
		<log4j.version>1.2.17</log4j.version>
		<project.deploy.directory>./target</project.deploy.directory>
	</properties>

	<!-- 打包后发到哪个仓库，一般release和snapshot版本是发到不同的库
	<distributionManagement>
		<repository>
			<id>user-release</id>
			<name>Release Repository</name>
			<url>http://10.12.3.121:8081/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>user-snapshot</id>
			<name>Snapshots Repository</name>
			<url>http://10.12.3.121:8081/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>
	 -->

	<repositories>
		<repository>
			<id>central-repos</id>
			<name>Central Repository</name>
			<url>http://maven.aliyun.com/nexus/content/groups/public/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		
		<repository>
			<id>springsource-repos</id>
			<name>SpringSource Repository</name>
			<url>http://repository.jboss.org/maven2/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
	    </repository>
		
	</repositories>
	
	<dependencies>
		<!-- common工具包 -->
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.6</version>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
