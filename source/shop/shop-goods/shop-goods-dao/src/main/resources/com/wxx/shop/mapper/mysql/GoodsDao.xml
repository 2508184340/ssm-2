<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wxx.shop.dao.GoodsDao">
	<resultMap type="com.wxx.shop.model.Goods" id="Goods">
		<id column="goods_id" property="goodsId" jdbcType="INTEGER" />
	    <result column="price" property="price" jdbcType="INTEGER" />
	    <result column="goods_no" property="goodsNo" jdbcType="VARCHAR" />
	    <result column="goods_name" property="goodsName" jdbcType="VARCHAR" />
	    <result column="goods_py_name" property="goodsPyName" jdbcType="VARCHAR" />
	    <result column="goods_shot_py_name" property="goodsShotPyName" jdbcType="VARCHAR" />
	    <result column="brand" property="brand" jdbcType="VARCHAR" />
	    <result column="remark" property="remark" jdbcType="VARCHAR" />
	    <result column="create_time" property="createTime" jdbcType="DATETIME" />
	    <result column="update_time" property="updateTime" jdbcType="DATETIME" />
	</resultMap>
	
	<sql id="allmenbers">
		goods_id,
		price,
		goods_no,
		goods_name,
		goods_py_name,
		goods_shot_py_name,
		brand,
		remark,
		create_time,
		update_time
	</sql>
	
	<select id="queryByName" parameterType="java.lang.String">
		select goods_id,price,goods_name
		from goods
		<where>
		goods_name like concat('%',#{goodsSearchName,jdbcType=VARCHAR},'%')
		or goods_py_name like concat('%',#{goodsSearchName,jdbcType=VARCHAR},'%')
		or goods_shot_py_name like concat('%',#{goodsSearchName,jdbcType=VARCHAR},'%')
		</where>
	</select>
	
	<select id="queryPage" resultMap="Goods">
		select 
		<include refid="allmenbers"/>
		from goods
		<where>
			<if test="param.goodsName != null and param.goodsName != ''">
				and goods_name like concat('%',#{param.goodsName,jdbcType=VARCHAR},'%')
			</if>
		</where>
	</select>
    <insert id="insert" parameterType="com.wxx.shop.model.Goods">
    	insert into goods(
    		goods_name
    	) values (
    		#{goodsName,jdbcType=VARCHAR}
    	)
    	<selectKey keyProperty="goodsId" order="AFTER" resultType="int" >
    	SELECT LAST_INSERT_ID() AS goods_id
    	</selectKey>
    </insert>
</mapper>
